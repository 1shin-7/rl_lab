Screen {
    layout: vertical;
}

/* Main content area */
#task-content {
    height: 1fr;
    width: 100%;
    align: center middle;
    overflow: hidden; 
}

RichLog {
    width: 100%;
    dock: bottom;
    border: solid $accent;
    background: $surface;
    color: $text;
    /* Height is controlled by Python */
}
